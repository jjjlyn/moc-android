<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Moc.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.Moc.Button.FilledBox">
        <item name="android:backgroundTint">@color/selector_button_background_tint</item>
        <item name="android:paddingTop">@dimen/button_padding_large_top</item>
        <item name="android:paddingBottom">@dimen/button_padding_large_bottom</item>
        <item name="cornerRadius">@dimen/radius_large</item>
    </style>

    <style name="Widget.Moc.Button.FilledBox.Ghost">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="rippleColor">@color/color_on_surface_200</item>
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/radius_normal</item>
        <item name="android:paddingTop">@dimen/button_padding_small_top</item>
        <item name="android:paddingBottom">@dimen/button_padding_small_bottom</item>
        <item name="android:paddingStart">@dimen/button_padding_small_start</item>
        <item name="android:paddingEnd">@dimen/button_padding_small_end</item>
    </style>

    <style name="Widget.Moc.Button.OutlinedBox">
        <item name="android:backgroundTint">?android:colorBackground</item>
        <item name="strokeWidth">@dimen/stroke_small</item>
        <item name="strokeColor">?colorPrimary</item>
        <item name="android:paddingTop">@dimen/button_padding_large_top</item>
        <item name="android:paddingBottom">@dimen/button_padding_large_bottom</item>
        <item name="cornerRadius">@dimen/radius_large</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>
</resources>