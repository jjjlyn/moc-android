<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moc" parent="Base.Theme.Moc">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary_500</item>
        <item name="colorPrimaryVariant">@color/color_primary_900</item>
        <!-- Secondary brand color. -->
        <item name="statusBarScrim">@color/status_bar_scrim</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Moc.Splash">
        <item name="android:statusBarColor">#1A474CFF</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>
</resources>