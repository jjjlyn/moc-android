<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableEnd="@drawable/ic_arrow_down_large"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="@dimen/margin_large"
        android:paddingTop="@dimen/button_padding_large_top"
        android:paddingBottom="@dimen/button_padding_large_bottom"
        android:textColor="?colorOnSurface"
        android:textAppearance="@style/TextAppearance.Moc.H5"
        tool:text="직장상사 때문에 고민이에요"/>

    <View
        android:layout_width="0dp"
        android:background="#e5e5e5"
        android:layout_marginStart="@dimen/button_padding_large_bottom"
        android:layout_height="@dimen/stroke_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>