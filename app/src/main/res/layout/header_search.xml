<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        tools:text="모크러 TALK"
        android:hint="검색"
        android:maxLines="1"
        android:maxLength="30"
        android:paddingVertical="@dimen/margin_2xsmall"
        android:layout_marginVertical="@dimen/margin_large"
        android:drawableStart="@drawable/ic_search"
        android:drawableTint="@color/color_on_surface_500"
        android:drawablePadding="3dp"
        android:paddingHorizontal="@dimen/margin_2xsmall"
        app:layout_constraintEnd_toStartOf="@id/buttonOption"
        android:layout_marginEnd="@dimen/margin_xsmall"
        android:background="@drawable/bg_radius_normal"
        android:backgroundTint="?colorSurface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/color_on_surface_500" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="취소"
        style="@style/Widget.Moc.Button.FilledBox.Ghost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/TextAppearance.Moc.H4"
        android:textColor="?colorOnSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/margin_2xsmall"/>

</androidx.constraintlayout.widget.ConstraintLayout>