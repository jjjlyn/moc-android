<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="titleUIModel"
            type="app.moc.android.ui.home.ComponentTitleUIModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools">

    <include
        app:uiModel="@{titleUIModel}"
        android:id="@+id/containerTitle"
        layout="@layout/component_title_item" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tool:listitem="@layout/home_moc_talk_item"
        android:overScrollMode="never"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>